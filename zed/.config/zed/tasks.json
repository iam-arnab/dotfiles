// Static tasks configuration.
//
[
  {
    "label": "Compile and Run C File",
    "command": "gcc $ZED_FILE -o $ZED_STEM && ./$ZED_STEM",
    "env": {},
    "cwd": "$ZED_DIRNAME",
    "use_new_terminal": false,
    "allow_concurrent_runs": false,
    "reveal": "always"
  }
  {
    "label": "Serve HTML",
    "command": "python3 -m http.server 8080",
    "env": {},
    "cwd": "$ZED_DIRNAME",
    "use_new_terminal": false,
    "allow_concurrent_runs": false,
    "reveal": "always"
  }
]
